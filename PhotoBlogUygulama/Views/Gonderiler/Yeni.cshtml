@model YeniGonderiViewModel
@{
    ViewData["Title"] = "Yeni Gönderi Ekle";
}

<h2>@ViewData["Title"]</h2>


<form asp-action="Yeni" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label asp-for="Baslik" class="form-label">Baslik</label>
        <input type="text" asp-for="Baslik" class="form-control"/>
        <span asp-validation-for="Baslik" class="text-danger mt-1"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Resim">Resim yükleyiniz</label>
        <input type="file" asp-for="Resim" class="form-control" />
        <span asp-validation-for="Resim" class="text-danger mt-1"></span>
    </div>

    <button class="btn btn-primary">Ekle</button>
</form>
